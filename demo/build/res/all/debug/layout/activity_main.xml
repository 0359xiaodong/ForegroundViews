<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp">

  <com.dogmalabs.foregroundviews.FRelativeLayout
      android:id="@+id/relatives"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_card"
      custom:foreground="@drawable/fg_card">

    <TextView
        android:id="@android:id/text1"
        style="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center"
        android:text="RelativeLayout List"/>

  </com.dogmalabs.foregroundviews.FRelativeLayout>

  <com.dogmalabs.foregroundviews.FLinearLayout
      android:id="@+id/linears"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_card"
      custom:foreground="@drawable/fg_card">

    <TextView
        android:id="@android:id/text1"
        style="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center"
        android:text="LinearLayout List"/>

  </com.dogmalabs.foregroundviews.FLinearLayout>

  <com.dogmalabs.foregroundviews.FTextView
      android:id="@+id/texts"
      style="@android:style/TextAppearance.Large"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/actionBarSize"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_card"
      android:gravity="center"
      android:text="TextView List"
      custom:foreground="@drawable/fg_card"/>

  <com.dogmalabs.foregroundviews.FTextView
      android:id="@+id/images"
      style="@android:style/TextAppearance.Large"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/actionBarSize"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_card"
      android:gravity="center"
      android:text="ImageView List"
      custom:foreground="@drawable/fg_card"/>

